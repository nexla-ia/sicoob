{
  "name": "sicoob-analysis-backend",
  "version": "1.0.0",
  "description": "Backend API for Sicoob Document Analysis Platform",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test-db": "node test-connection.js",
